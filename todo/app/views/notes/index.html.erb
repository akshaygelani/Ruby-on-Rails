<p id="notice"><%= notice %></p>

<h1>Notes</h1>
<h3>Welcome <%= current_user.name %></h3>
<table border="2">
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @notes.each do |note| %>
      <tr>
        <td><%= note.name %></td>
        <td><%= note.description %></td>
        <td><%= note.status %></td>
        <td><%= link_to 'Show', note %></td>
        <td><%= link_to 'Edit', edit_note_path(note) %></td>
        <td><%= link_to 'Destroy', note, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<div class="field">
  <%= link_to 'New Note','notes/new' ,method: :get %>
  <%= link_to "Logout",'/logout',method: :get %>
  <%= link_to "Change Password",'/password',method: :get %>
  <%= link_to "String Operations", '/details' , method: :get %>
</div>

